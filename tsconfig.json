{
  "compilerOptions": {
    "target": "es5",

    "noImplicitAny": true,
    "preserveConstEnums": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true,

    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node"
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
